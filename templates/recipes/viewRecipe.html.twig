{% extends 'base.html.twig' %}
{% block body %}
    <h1>{{ recipe.title }}</h1>
    <p>Difficult√© : {{ recipe.difficulty }}</p>
    <ul>
        <li>Preparation : {{ recipe.preparationTime }} minutes</li>
        <li>Cuisson : {{ recipe.cookingTime }} minutes</li>
    </ul>
    {{ recipe.content|raw }}
    <hr>
    {% if comments %}
        {% for comment in comments %}
        <div>
            <p>{{ comment.author }}</p>
            <p>{{ comment.content|raw }}</p>
        </div>
            <hr>
        {% endfor %}
    {% endif %}
{% endblock %}